# üîê SmythOS SRE - Variables de Entorno (Plantilla)
# Copia este archivo como .env y configura tus credenciales reales

# =============================================================================
# ü§ñ API KEYS - PROVEEDORES DE LLM
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=sk-proj-tu_openai_api_key_aqui

# Anthropic Claude API Key  
ANTHROPIC_API_KEY=sk-ant-tu_anthropic_api_key_aqui

# Google AI API Key
GOOGLE_AI_API_KEY=tu_google_ai_api_key_aqui

# Together AI API Key (para LlamaCoder)
TOGETHER_API_KEY=tu_together_api_key_aqui

# =============================================================================
# üóÑÔ∏è BASE DE DATOS Y ALMACENAMIENTO
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://sre_user:password_seguro@localhost:5432/sre_db

# Redis Cache URL
REDIS_URL=redis://localhost:6379

# MongoDB URL (opcional)
MONGODB_URL=mongodb://localhost:27017/sre_mongodb

# =============================================================================
# üöÄ CONFIGURACI√ìN DE APLICACI√ìN
# =============================================================================

# Entorno de ejecuci√≥n
NODE_ENV=development

# Puerto de la aplicaci√≥n
PORT=8000

# JWT Secret para autenticaci√≥n
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_min_32_caracteres

# URL base de la aplicaci√≥n
BASE_URL=http://localhost:8000

# =============================================================================
# üîí CONFIGURACI√ìN DE SEGURIDAD
# =============================================================================

# CORS Origins permitidos (separados por comas)
CORS_ORIGIN=http://localhost:3000,https://sre-api.alexanderoviedofadul.dev

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Configuraci√≥n de sesiones
SESSION_SECRET=tu_session_secret_aqui

# =============================================================================
# üìä LOGGING Y MONITOREO
# =============================================================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Archivo de logs
LOG_FILE=/root/logs/sre-api.log

# Habilitar logs de requests
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# üß† CONFIGURACI√ìN DE SMYTHOS
# =============================================================================

# Ruta del workspace de SmythOS
SMYTHOS_WORKSPACE_PATH=/root/sre-espanol/workspace

# Ruta de datos de agentes
SMYTHOS_AGENTS_PATH=/root/sre-espanol/agents-data

# TTL del cache (en segundos)
SMYTHOS_CACHE_TTL=3600

# L√≠mite de memoria para agentes (MB)
SMYTHOS_MEMORY_LIMIT=512

# Timeout para operaciones de agentes (ms)
SMYTHOS_AGENT_TIMEOUT=30000

# =============================================================================
# üåê CONFIGURACI√ìN DE SERVICIOS EXTERNOS
# =============================================================================

# Webhook URL para notificaciones
WEBHOOK_URL=https://hooks.slack.com/services/tu/webhook/url

# Email SMTP para notificaciones
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion

# =============================================================================
# üê≥ CONFIGURACI√ìN DE DOCKER
# =============================================================================

# Nombre del contenedor
CONTAINER_NAME=sre-spanish-api

# Red de Docker
DOCKER_NETWORK=sre-network

# Volumen de datos
DATA_VOLUME=sre-data

# =============================================================================
# üîß CONFIGURACI√ìN DE DESARROLLO
# =============================================================================

# Habilitar hot reload
ENABLE_HOT_RELOAD=true

# Puerto de desarrollo
DEV_PORT=8001

# Habilitar debugging
ENABLE_DEBUG=true

# Mostrar stack traces completos
SHOW_STACK_TRACES=true

# =============================================================================
# üöÄ CONFIGURACI√ìN DE PRODUCCI√ìN
# =============================================================================

# N√∫mero de workers (para cluster)
WORKERS=4

# Habilitar compresi√≥n
ENABLE_COMPRESSION=true

# Timeout de requests (ms)
REQUEST_TIMEOUT=30000

# L√≠mite de tama√±o de payload (MB)
PAYLOAD_LIMIT=10

# =============================================================================
# üìà M√âTRICAS Y ANALYTICS
# =============================================================================

# Google Analytics ID
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN para error tracking
SENTRY_DSN=https://tu_sentry_dsn_aqui

# New Relic License Key
NEW_RELIC_LICENSE_KEY=tu_new_relic_key_aqui

# =============================================================================
# üîÑ CONFIGURACI√ìN DE BACKUP
# =============================================================================

# Ruta de backups
BACKUP_PATH=/root/backups/sre

# Retenci√≥n de backups (d√≠as)
BACKUP_RETENTION_DAYS=7

# Habilitar backup autom√°tico
ENABLE_AUTO_BACKUP=true

# Intervalo de backup (cron format)
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# üåç CONFIGURACI√ìN DE LOCALIZACI√ìN
# =============================================================================

# Idioma por defecto
DEFAULT_LANGUAGE=es

# Zona horaria
TIMEZONE=America/Bogota

# Formato de fecha
DATE_FORMAT=DD/MM/YYYY

# Moneda por defecto
DEFAULT_CURRENCY=COP
